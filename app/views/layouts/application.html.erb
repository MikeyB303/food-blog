<!DOCTYPE html>
<html>
  <head>
    <title>FoodBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if current_user %>
          <li><a href="/">Home</a></li>
          <li><a href="/users/<%=current_user.id%>"><%=current_user.first_name%></a></li>
          <%= form_tag("/sessions", method: "delete") do %>
          <li><%= submit_tag('Logout') %></li>
          <% end %>
        <% else %>  
          <li><a href="/">Home</a></li>
          <li><a href="/sessions/new">Login</a></li>
          <li><a href="/users/new">New User Registration</a></li>
        <% end %>
      </ul>  
    </nav>
    <%= yield %>
  </body>
</html>
